# Auto detect text files and perform LF normalization
* text=auto

# JavaScript
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# JSON
*.json text eol=lf

# CSS
*.css text eol=lf
*.scss text eol=lf

# HTML
*.html text eol=lf

# Markdown
*.md text eol=lf

# SQL
*.sql text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
